    <div class="container">
      <form action="/editclosedate" method="post">
        <div class="row w-100">
          <h2 style="text-align: center">Edit closer date</h2>
          <label for="Topic">Topic:</label>
          <br />
          <select name="category" class="form-control">
              {{#each category}}
                  <option value="{{_id}}">{{name}}</option>
              {{/each}}
          </select>
          <br />
          <br />
          <div class="deadline mt-4">
            {{!-- lay  time --}}
            <label for="">Deadline Topic</label>
            
            <input type="datetime-local" name="deadlineIdea"/>
            
            <label for="">Deadline Comment</label>

            <input type="datetime-local" name="deadlineComment"/>
          </div>
          <br />
          <textarea class=" mt-4 topic" rows="10" cols="100" placeholder="Description" name="description"></textarea>
          <br /><br />
          <button class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </body>
