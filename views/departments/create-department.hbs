    <div class="container">
        <h1>Create department</h1>
        <form action="/createDepartment" method="POST">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Department name" name="txtName" required>
            </div>
            <div class="mb-3">
                <label for="form-label">Description</label>
                <input type="text" class="form-control" placeholder="Department description" name="txtDescription" required>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
